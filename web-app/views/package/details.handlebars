<div class="container-fluid text-center">
    <div class="row content">
        <div class="col-sm-1 text-left"></div>
        <div class="col-sm-8 text-left">
            <h1>{{package.name}}</h1>
            <p>{{package.description}}</p>
            <hr>
            <h3>Itinerary</h3>
            <p>Build the Itinerary listing below this element</p>
        </div>
        <div class="col-sm-2 sidenav">
            <div class="well">
                <label>Price: $1000.00</label>
                <div class="input-group">
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-default btn-number" data-type="minus" data-field="quantity"
                            onclick="this.parentNode.parentNode.querySelector('input[type=number]').stepDown()">
                            <span class="glyphicon glyphicon-minus"></span>
                        </button>
                    </span>
                    <input type="number" name="quantity" class="form-control input-number" value="1" min="1">
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-default btn-number" data-type="plus" data-field="quantity"
                            onclick="this.parentNode.parentNode.querySelector('input[type=number]').stepUp()">
                            <span class="glyphicon glyphicon-plus"></span>
                        </button>
                    </span>
                </div>
                <button type="button" class="btn btn-success">Add to Cart</button>
            </div>
        </div>
        <div class="col-sm-1 text-left"></div>
    </div>
</div>